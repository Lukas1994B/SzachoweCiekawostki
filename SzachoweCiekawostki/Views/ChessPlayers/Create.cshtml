@model SzachoweCiekawostki.Models.ChessPlayers

@{
    ViewData["Title"] = "Create";
}

<h1>Utwórz</h1>

<h4>Zawodnika szachowego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImieNazwisko" class="control-label"></label>
                <input asp-for="ImieNazwisko" class="form-control" />
                <span asp-validation-for="ImieNazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataUrodzenia" class="control-label"></label>
                <input asp-for="DataUrodzenia" class="form-control" />
                <span asp-validation-for="DataUrodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Klub" class="control-label"></label>
                <input asp-for="Klub" class="form-control" />
                <span asp-validation-for="Klub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ranking" class="control-label"></label>
                <input asp-for="Ranking" class="form-control" />
                <span asp-validation-for="Ranking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
